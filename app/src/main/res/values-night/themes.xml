<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyInfoNight" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="primaryColor">@color/colorPrimaryNight</item>
        <item name="primaryContentColor">@color/background_dark</item>
        <item name="primaryBtnColor">@color/btnLoadNight</item>
        <item name="primaryDarkColor">@color/colorPrimaryDarkNight</item>
        <!-- Secondary brand color. -->


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyInfoNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>



    <style name="Theme.MyInfoNight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyInfoNight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>