<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyInfo" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="primaryColor">@color/colorPrimary</item>
        <item name="primaryContentColor">@color/background_light</item>
        <item name="primaryBtnColor">@color/background_light</item>
        <item name="primaryDarkColor">@color/colorPrimaryDark</item>
        <!-- Secondary brand color. -->


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyInfo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>



    <style name="Theme.MyInfo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyInfo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>